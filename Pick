    task.spawn(function()
        createIntroScreen()
        task.wait(4)
        
        local keyGui = Instance.new("ScreenGui")
        keyGui.Name = "LostKeySystem"
        keyGui.Parent = player.PlayerGui
        keyGui.ResetOnSpawn = false
        
