        subtitle.TextXAlignment = Enum.TextXAlignment.Left
        subtitle.Parent = frame
        
        local premiumLabel = Instance.new("TextLabel")
        premiumLabel.Size = UDim2.new(0, 200, 0, 20)
        premiumLabel.Position = UDim2.new(0, 100, 0, 70)
        premiumLabel.BackgroundTransparency = 1
        premiumLabel.Text = "Buy premium key by Lost"
        premiumLabel.TextColor3 = Color3.fromRGB(255, 215, 0)
        premiumLabel.TextSize = isMobile and 10 or 12
        premiumLabel.Font = Enum.Font.Gotham
        premiumLabel.TextXAlignment = Enum.TextXAlignment.Left
        premiumLabel.Parent = frame
        
        local discordIcon = Instance.new("ImageButton")
        discordIcon.Size = UDim2.new(0, 30, 0, 30)
        discordIcon.Position = UDim2.new(1, -120, 0, 25)
        discordIcon.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
        discordIcon.Image = "rbxassetid://6031094670"
        discordIcon.Parent = frame
        
